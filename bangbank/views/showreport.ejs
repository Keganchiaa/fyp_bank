<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>View Reports - BangBank</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.sheetjs.com/xlsx-latest/package/dist/xlsx.full.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #16213e 100%);
      color: #e0e0e0;
      font-family: 'Segoe UI', Tahoma, sans-serif;
      line-height: 1.6;
      min-height: 100vh;
    }

    /* Header styles */
    header {
      background: rgba(0, 0, 0, 0.8);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid rgba(0, 255, 255, 0.2);
      padding: 1rem 2rem;
      box-shadow: 0 2px 20px rgba(0, 255, 255, 0.1);
      position: sticky;
      top: 0;
      z-index: 1000;
    }

    .header-content {
      max-width: 1500px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 2rem;
    }

    .logo {
      font-size: 1.8rem;
      font-weight: 700;
      background: linear-gradient(135deg, #00ffff, #ff00ff);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      text-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
      flex-shrink: 0;
    }

    .welcome-message {
      font-size: 1.2rem;
      color: #ffffff;
      text-shadow: 0 0 10px rgba(0, 255, 255, 0.3);
      flex-grow: 1;
      text-align: center;
    }

    .nav-links {
      display: flex;
      gap: 1rem;
      flex-shrink: 0;
      align-items: center;
    }

    .nav-links a {
      color: #e0e0e0;
      text-decoration: none;
      padding: 0.75rem 1.5rem;
      border-radius: 25px;
      background: rgba(0, 255, 255, 0.1);
      border: 1px solid rgba(0, 255, 255, 0.3);
      transition: all 0.3s ease;
      font-weight: 500;
      box-shadow: 0 0 10px rgba(0, 255, 255, 0.2);
      white-space: nowrap;
    }

    .nav-links a:hover {
      color: #00ffff;
      background: rgba(0, 255, 255, 0.2);
      transform: translateY(-2px);
      box-shadow: 0 5px 20px rgba(0, 255, 255, 0.4);
      border-color: rgba(0, 255, 255, 0.5);
    }

    .logout-btn {
      background: linear-gradient(135deg, rgb(229, 10, 10), #ff4444) !important;
      color: #ffffff !important;
      border: none !important;
      padding: 0.75rem 1.5rem;
      border-radius: 25px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(255, 0, 255, 0.3);
      letter-spacing: 0.5px;
      font-size: 0.85rem;
      text-decoration: none;
    }

    .logout-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(255, 0, 255, 0.5);
      background: linear-gradient(135deg, #ff3300, #ff6666) !important;
    }

    h1 {
      text-align: center;
      color: #00ffff;
      margin-bottom: 2rem;
      text-shadow: 0 0 10px rgba(0, 255, 255, 0.4);
    }

    .table-container {
      width: 100%;
      margin: 0 auto 2rem auto;
      overflow-x: auto;
      background: rgba(0, 0, 0, 0.6);
      border-radius: 20px;
      border: 1px solid rgba(0, 255, 255, 0.3);
      box-shadow: 0 4px 16px rgba(0, 255, 255, 0.1);
      padding: 1.5rem;
    }

    .table {
      background: transparent;
      border: none;
      margin-bottom: 0;
    }

    .table thead th {
      background: rgba(0, 255, 255, 0.15);
      color: #00ffff;
      text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
      border: 1px solid rgba(0, 255, 255, 0.3);
      font-weight: 600;
      padding: 1rem 0.75rem;
    }

    .table tbody td {
      color: #e0e0e0;
      background: rgba(0, 0, 0, 0.3);
      border: 1px solid rgba(0, 255, 255, 0.2);
      padding: 1rem 0.75rem;
    }

    .table-hover tbody tr:hover td {
      background: rgba(0, 255, 255, 0.1);
      color: #ffffff;
      transform: scale(1.01);
      transition: all 0.3s ease;
      box-shadow: 0 2px 8px rgba(0, 255, 255, 0.2);
    }

    .chart-section {
      background: rgba(0, 0, 0, 0.6);
      padding: 1.5rem;
      border-radius: 20px;
      border: 1px solid rgba(0, 255, 255, 0.3);
      box-shadow: 0 4px 16px rgba(0, 255, 255, 0.1);
      margin-bottom: 2rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .chart-section h4 {
      color: #00ffff;
      margin-bottom: 1rem;
      text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
    }

    /* Fixed chart sizes */
    .chart-container {
      position: relative;
      width: 300px;
      height: 250px;
      margin: 0 auto;
    }

    .chart-container.line-chart {
      width: 100%;
      height: 300px;
    }

    #accountChart, #consultChart, #cardChart {
      width: 300px !important;
      height: 250px !important;
    }

    #txnChart {
      width: 100% !important;
      height: 300px !important;
    }

    .btn-outline-cyan {
      color: #00ffff;
      border: 1px solid #00ffff;
      background: transparent;
      padding: 0.75rem 1.5rem;
      border-radius: 25px;
      font-weight: 500;
      transition: 0.3s;
      text-decoration: none;
    }

    .btn-outline-cyan:hover {
      background-color: #00ffff;
      color: #000;
      box-shadow: 0 5px 20px rgba(0, 255, 255, 0.4);
    }

    .container-fluid {
      max-width: 1400px;
      margin: 0 auto;
      padding: 2rem;
    }

    .chart-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
      margin-top: 2rem;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .chart-section, .table-container { 
      animation: fadeIn 0.6s ease-out; 
    }

    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: 
        radial-gradient(circle at 25% 25%, rgba(0, 255, 255, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 75% 75%, rgba(255, 0, 255, 0.1) 0%, transparent 50%);
      pointer-events: none;
      z-index: -1;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
      .header-content {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
      }

      .welcome-message {
        text-align: center;
      }

      .nav-links {
        flex-wrap: wrap;
        justify-content: center;
      }

      .nav-links a {
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
      }

      .table thead th,
      .table tbody td {
        padding: 0.5rem;
        font-size: 0.9rem;
      }
      
      .chart-grid {
        grid-template-columns: 1fr;
      }

      .chart-container {
        width: 280px;
        height: 220px;
      }

      #accountChart, #consultChart, #cardChart {
        width: 280px !important;
        height: 220px !important;
      }
    }

    @media (max-width: 480px) {
      .header-content {
        flex-direction: column;
        gap: 1rem;
      }

      .nav-links {
        flex-direction: column;
        width: 100%;
        gap: 0.5rem;
      }

      .nav-links a {
        width: 100%;
        text-align: center;
      }

      .chart-container {
        width: 250px;
        height: 200px;
      }

      #accountChart, #consultChart, #cardChart {
        width: 250px !important;
        height: 200px !important;
      }
    }
  </style>
</head>
<body>
  <header>
    <div class="header-content">
      <div class="logo">BangBank</div>
      <div class="welcome-message">Welcome, <%= user.username %> (<%= user.role %>)</div>
      <nav class="nav-links">
        <a href="/admin/dashboard">Back to Dashboard</a>
        <a href="/logout" class="logout-btn nav-logout-link">Logout</a>
      </nav>
    </div>
  </header>

  <div class="container-fluid">
    <h1>System Reports</h1>
    <% if (reports && reports.length > 0) { const report = reports[0]; %>
      <div class="table-container">
        <div class="text-end mb-3">
          <button class="btn btn-outline-cyan" onclick="downloadExcel()">Download Excel</button>
        </div>

        <table class="table table-bordered table-hover text-center align-middle">
          <thead>
            <tr>
              <th>Title</th><th>Total Users</th><th>Active Accounts</th><th>Pending Accounts</th>
              <th>Active Cards</th><th>Pending Cards</th><th>Consults Completed</th><th>Txns</th><th>Generated</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= report.title %></td>
              <td><%= report.total_users %></td>
              <td><%= report.active_accounts %></td>
              <td><%= report.pending_accounts %></td>
              <td><%= report.active_cards %></td>
              <td><%= report.pending_cards %></td>
              <td><%= `${report.completed_consultations} / ${report.total_consultations}` %></td>
              <td><%= report.total_transactions %></td>
              <td><%= new Date(report.generated_at).toLocaleString() %></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="chart-grid">
        <div class="chart-section">
          <h4>User & Account Distribution</h4>
          <div class="chart-container">
            <canvas id="accountChart"></canvas>
          </div>
        </div>
        <div class="chart-section">
          <h4>Consultation Summary</h4>
          <div class="chart-container">
            <canvas id="consultChart"></canvas>
          </div>
        </div>
        <div class="chart-section">
          <h4>Card Status Breakdown</h4>
          <div class="chart-container">
            <canvas id="cardChart"></canvas>
          </div>
        </div>
        <div class="chart-section">
          <h4>Transaction Activity</h4>
          <div class="chart-container line-chart">
            <canvas id="txnChart"></canvas>
          </div>
        </div>
      </div>
    <% } else { %>
      <p class="text-center">No data available at the moment.</p>
    <% } %>
  </div>

  <!-- Chart.js Script (make sure it's in your <head> or here if not already included) -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <!-- Chart Rendering -->
  <script>
    window.addEventListener('load', () => {
      const report = <%- JSON.stringify(reports[0]) %>;
      const txnDates = <%- JSON.stringify(txnByDate.map(row => row.date)) %>;
      const txnCounts = <%- JSON.stringify(txnByDate.map(row => row.count)) %>;

      const pieChartOptions = {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            labels: {
              color: '#00ffff',
              font: { size: 12 }
            }
          }
        }
      };

      new Chart(document.getElementById('accountChart'), {
        type: 'pie',
        data: {
          labels: ['Total Users', 'Active Accounts', 'Pending Accounts'],
          datasets: [{
            data: [report.total_users, report.active_accounts, report.pending_accounts],
            backgroundColor: ['#00ffff', '#00cccc', '#008b8b']
          }]
        },
        options: pieChartOptions
      });

      new Chart(document.getElementById('consultChart'), {
        type: 'pie',
        data: {
          labels: ['Completed', 'Uncompleted'],
          datasets: [{
            data: [report.completed_consultations, report.total_consultations - report.completed_consultations],
            backgroundColor: ['#00ff99', '#ff4d4d']
          }]
        },
        options: pieChartOptions
      });

      new Chart(document.getElementById('cardChart'), {
        type: 'bar',
        data: {
          labels: ['Active Cards', 'Pending Cards'],
          datasets: [{
            label: 'Cards',
            data: [report.active_cards, report.pending_cards],
            backgroundColor: ['#00ffff', '#0099cc']
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: { labels: { color: '#00ffff' } }
          },
          scales: {
            x: {
              ticks: { color: '#00ffff' },
              grid: { color: 'rgba(0, 255, 255, 0.1)' }
            },
            y: {
              ticks: { color: '#00ffff' },
              grid: { color: 'rgba(0, 255, 255, 0.1)' }
            }
          }
        }
      });

      new Chart(document.getElementById('txnChart'), {
        type: 'line',
        data: {
          labels: txnDates,
          datasets: [{
            label: 'Transactions Per Day',
            data: txnCounts,
            borderColor: '#00ffff',
            backgroundColor: 'rgba(0, 255, 255, 0.1)',
            tension: 0.3,
            fill: true
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: { labels: { color: '#00ffff' } }
          },
          scales: {
            x: {
              ticks: {
                color: '#00ffff',
                callback: function(value, index) {
                  const date = new Date(txnDates[index]);
                  return `${date.getDate().toString().padStart(2, '0')}/${(date.getMonth() + 1).toString().padStart(2, '0')}`;
                }
              },
              grid: { color: 'rgba(0, 255, 255, 0.1)' }
            },
            y: {
              ticks: {
                color: '#00ffff',
                precision: 0,
                stepSize: 1,
                callback: v => Number.isInteger(v) ? v : ''
              },
              grid: { color: 'rgba(0, 255, 255, 0.1)' }
            }
          }
        }
      });
    });
  </script>

  <!-- Excel Export with Base64 Charts -->
  <script>
    async function downloadExcel() {
      const table = document.querySelector(".table");
      const worksheet = XLSX.utils.table_to_sheet(table);

      if (worksheet["G2"]) {
        worksheet["G2"].v = "1 / 3";
        worksheet["G2"].t = "s";
        worksheet["G2"].z = "@";
      }

      const workbook = XLSX.utils.book_new();
      XLSX.utils.book_append_sheet(workbook, worksheet, "Report");

      const charts = ["accountChart", "consultChart", "cardChart", "txnChart"];
      const imageSheetData = [["Chart Name", "Base64 Image"]];

      for (const id of charts) {
        const canvas = document.getElementById(id);
        if (canvas) {
          const base64 = canvas.toDataURL("image/png");
          imageSheetData.push([id, base64]);
        }
      }

      const imageSheet = XLSX.utils.aoa_to_sheet(imageSheetData);
      XLSX.utils.book_append_sheet(workbook, imageSheet, "Chart Images");

      XLSX.writeFile(workbook, "bangbank_report_with_charts.xlsx");
    }
  </script>

  <script src="https://cdn.sheetjs.com/xlsx-latest/package/dist/xlsx.full.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
</body>

</html>