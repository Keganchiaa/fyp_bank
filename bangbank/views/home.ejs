  <!-- Scroll Animation Script -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Function to check if element is in viewport
      function isInViewport(element, offset = 80) {
        const rect = element.getBoundingClientRect();
        return (
          rect.top < (window.innerHeight || document.documentElement.clientHeight) - offset &&
          rect.bottom > offset
        );
      }

      // Function to animate elements
      function animateOnScroll() {
        const elementsToAnimate = document.querySelectorAll('.product-card, .feature-card, .product-category');
        
        elementsToAnimate.forEach((element) => {
          if (isInViewport(element, 100)) {
            // Element is in viewport - show it
            if (!element.classList.contains('animate')) {
              element.classList.add('animate');
            }
          } else {
            // Element is out of viewport - hide it
            if (element.classList.contains('animate')) {
              element.classList.remove('animate');
            }
          }
        });
      }

      // Initial check
      animateOnScroll();

      // Listen for scroll events with throttling for better performance
      let ticking = false;
      function onScroll() {
        if (!ticking) {
          requestAnimationFrame(() => {
            animateOnScroll();
            ticking = false;
          });
          ticking = true;
        }
      }

      window.addEventListener('scroll', onScroll);
      
      // Also check on resize
      window.addEventListener('resize', animateOnScroll);
    });
  </script>
