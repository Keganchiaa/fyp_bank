<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BangBank - Manage Products</title>
    <style>
        /* Reset and base styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #e0e0e0;
            background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #16213e 100%);
            min-height: 100vh;
        }

        /* Header styles - Updated to match user dashboard */
        header {
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(0, 255, 255, 0.2);
            padding: 1rem 2rem;
            box-shadow: 0 2px 20px rgba(0, 255, 255, 0.1);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .header-content {
            max-width: 1500px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 2rem;
        }

        .logo {
            font-size: 1.8rem;
            font-weight: 700;
            background: linear-gradient(135deg, #00ffff, #ff00ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
            flex-shrink: 0;
        }

        .welcome-message {
            font-size: 1.2rem;
            color: #ffffff;
            text-shadow: 0 0 10px rgba(0, 255, 255, 0.3);
            flex-grow: 1;
            text-align: center;
        }

        .nav-links {
            display: flex;
            gap: 1rem;
            flex-shrink: 0;
        }

        .nav-links a {
            color: #e0e0e0;
            text-decoration: none;
            padding: 0.75rem 1.5rem;
            border-radius: 25px;
            background: rgba(0, 255, 255, 0.1);
            border: 1px solid rgba(0, 255, 255, 0.3);
            transition: all 0.3s ease;
            font-weight: 500;
            box-shadow: 0 0 10px rgba(0, 255, 255, 0.2);
        }

        .nav-links a:hover {
            color: #00ffff;
            background: rgba(0, 255, 255, 0.2);
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(0, 255, 255, 0.4);
            border-color: rgba(0, 255, 255, 0.5);
        }

        .logout-btn {
            background: linear-gradient(135deg, #ff4757, #ff3838);
            color: #ffffff;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 25px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 6px 20px rgba(255, 71, 87, 0.4);
        }

        .logout-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(255, 71, 87, 0.6);
        }

        /* Container styles */
        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        /* Messages styles */
        .message {
            padding: 1rem 2rem;
            margin: 1rem 0;
            border-radius: 10px;
            backdrop-filter: blur(10px);
            border: 1px solid;
            animation: fadeIn 0.5s ease-out;
        }

        .message.success {
            background: rgba(0, 255, 0, 0.1);
            border-color: rgba(0, 255, 0, 0.3);
            color: #00ff00;
            box-shadow: 0 4px 15px rgba(0, 255, 0, 0.2);
        }

        .message.error {
            background: rgba(255, 0, 0, 0.1);
            border-color: rgba(255, 0, 0, 0.3);
            color: #ff4444;
            box-shadow: 0 4px 15px rgba(255, 0, 0, 0.2);
        }

        /* Section styles */
        .section {
            background: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(15px);
            padding: 2rem;
            border-radius: 20px;
            border: 1px solid rgba(0, 255, 255, 0.3);
            box-shadow: 0 8px 32px rgba(0, 255, 255, 0.2);
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
        }

        .section::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(0, 255, 255, 0.05), transparent);
            transition: left 0.5s;
        }

        .section:hover::before {
            left: 100%;
        }

        .section h2 {
            color: #ffffff;
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            text-shadow: 0 0 20px rgba(0, 255, 255, 0.5);
            background: linear-gradient(135deg, #00ffff, #ff00ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* Form styles */
        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .form-group {
            display: flex;
            flex-direction: column;
        }

        .form-group label {
            color: #00ffff;
            font-weight: 600;
            margin-bottom: 0.5rem;
            text-shadow: 0 0 10px rgba(0, 255, 255, 0.3);
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            background: rgba(0, 0, 0, 0.8);
            border: 1px solid rgba(0, 255, 255, 0.3);
            border-radius: 10px;
            padding: 0.8rem 1rem;
            color: #e0e0e0;
            font-size: 1rem;
            transition: all 0.3s ease;
            box-shadow: 0 2px 10px rgba(0, 255, 255, 0.1);
            font-family: inherit;
        }

        .form-group textarea {
            resize: vertical;
            min-height: 100px;
        }

        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: rgba(0, 255, 255, 0.8);
            box-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
            background: rgba(0, 0, 0, 0.9);
        }

        .form-group input::placeholder,
        .form-group textarea::placeholder {
            color: rgba(224, 224, 224, 0.5);
        }

        .form-group select option {
            background: rgba(0, 0, 0, 0.9);
            color: #e0e0e0;
        }

        .submit-btn {
            background: linear-gradient(135deg, #00ffff, #ff00ff);
            color: #000000;
            border: none;
            padding: 1rem 2rem;
            border-radius: 25px;
            font-weight: 700;
            font-size: 1.1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 6px 20px rgba(0, 255, 255, 0.4);
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .submit-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 30px rgba(0, 255, 255, 0.6);
        }

        /* Table styles */
        .table-container {
            overflow-x: auto;
            border-radius: 15px;
            background: rgba(0, 0, 0, 0.7);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(0, 255, 255, 0.3);
            box-shadow: 0 8px 32px rgba(0, 255, 255, 0.2);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            min-width: 800px;
        }

        th {
            background: rgba(0, 255, 255, 0.1);
            color: #00ffff;
            padding: 1rem;
            text-align: left;
            font-weight: 600;
            text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
            border-bottom: 2px solid rgba(0, 255, 255, 0.3);
        }

        td {
            padding: 1rem;
            border-bottom: 1px solid rgba(0, 255, 255, 0.1);
            color: #e0e0e0;
            transition: all 0.3s ease;
        }

        tr:hover td {
            background: rgba(0, 255, 255, 0.05);
            color: #ffffff;
        }

        /* Action buttons */
        .action-btn {
            display: inline-block;
            padding: 0.4rem 0.8rem;
            margin: 0 0.2rem;
            border-radius: 15px;
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            transition: all 0.3s ease;
            text-align: center;
            border: 1px solid;
            background: none;
            cursor: pointer;
            font-family: inherit;
        }

        .action-btn.edit {
            background: rgba(255, 255, 0, 0.1);
            border-color: rgba(255, 255, 0, 0.3);
            color: #ffff00;
        }

        .action-btn.edit:hover {
            background: rgba(255, 255, 0, 0.2);
            box-shadow: 0 4px 15px rgba(255, 255, 0, 0.3);
        }

        .action-btn.delete {
            background: rgba(255, 0, 0, 0.1);
            border-color: rgba(255, 0, 0, 0.3);
            color: #ff4444;
        }

        .action-btn.delete:hover {
            background: rgba(255, 0, 0, 0.2);
            box-shadow: 0 4px 15px rgba(255, 0, 0, 0.3);
        }

        .action-form {
            display: inline-block;
            margin: 0 0.2rem;
        }

        /* Divider */
        .divider {
            height: 2px;
            background: linear-gradient(90deg, transparent, rgba(0, 255, 255, 0.5), transparent);
            margin: 3rem 0;
            border: none;
        }

        /* Empty state */
        .empty-state {
            text-align: center;
            padding: 2rem;
            color: rgba(224, 224, 224, 0.6);
            font-style: italic;
        }

        /* Product type badges */
        .product-type-badge {
            display: inline-block;
            padding: 0.3rem 0.8rem;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 1rem;
        }

        .product-type-badge.savings {
            background: rgba(0, 255, 0, 0.2);
            color: #00ff00;
            border: 1px solid rgba(0, 255, 0, 0.3);
        }

        .product-type-badge.fixed-deposit {
            background: rgba(0, 255, 255, 0.2);
            color: #00ffff;
            border: 1px solid rgba(0, 255, 255, 0.3);
        }

        .product-type-badge.credit-card {
            background: rgba(255, 0, 255, 0.2);
            color: #ff00ff;
            border: 1px solid rgba(255, 0, 255, 0.3);
        }

        /* Dynamic field transitions */
        .form-group {
            transition: all 0.3s ease;
        }

        .form-group[style*="display: none"] {
            opacity: 0;
            transform: translateY(-10px);
        }

        /* Responsive design */
        @media (max-width: 768px) {
            .header-content {
                flex-direction: column;
                gap: 1rem;
                text-align: center;
            }

            .welcome-message {
                text-align: center;
            }

            .nav-links {
                flex-wrap: wrap;
                justify-content: center;
            }

            .nav-links a {
                padding: 0.5rem 1rem;
                font-size: 0.9rem;
            }

            .container {
                padding: 1rem;
            }

            .form-grid {
                grid-template-columns: 1fr;
            }

            .section {
                padding: 1.5rem;
            }

            .table-container {
                font-size: 0.9rem;
            }

            th, td {
                padding: 0.7rem;
            }
        }

        @media (max-width: 480px) {
            .nav-links {
                flex-direction: column;
                width: 100%;
            }

            .nav-links a {
                width: 100%;
                text-align: center;
            }

            .section h2 {
                font-size: 1.5rem;
            }

            .action-btn {
                display: block;
                margin: 0.2rem 0;
                width: 100%;
            }

            .action-form {
                display: block;
                margin: 0.2rem 0;
            }
        }

        /* Background decoration */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 25% 25%, rgba(0, 255, 255, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 75% 75%, rgba(255, 0, 255, 0.1) 0%, transparent 50%);
            pointer-events: none;
            z-index: -1;
        }

        /* Animations */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .section {
            animation: fadeIn 0.6s ease-out;
        }

        /* Focus states for accessibility */
        .nav-links a:focus,
        .submit-btn:focus,
        .action-btn:focus,
        .logout-btn:focus {
            outline: 2px solid rgba(0, 255, 255, 0.5);
            outline-offset: 2px;
        }
    </style>
</head>

<body>
    <header>
        <div class="header-content">
            <div class="logo">BangBank</div>
            <div class="welcome-message">Welcome, <%= user.username %> (<%= user.role %>)</div>
            <nav class="nav-links">
                <a href="/admin/dashboard">Dashboard</a>
                <a href="/admin/accounts">Account Applications</a>
                <a href="/admin/creditcards">Credit Card Applications</a>
                <a href="/profile">Profile Settings</a>
                <form action="/logout" method="GET" style="margin: 0;">
                    <button type="submit" class="logout-btn">Logout</button>
                </form>
            </nav>
        </div>
    </header>

    <div class="container">
        <!-- Success / Error Messages -->
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="message success">
                <%= success %>
            </div>
        <% } %>
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="message error">
                <%= error %>
            </div>
        <% } %>

        <!-- Create Product Section -->
        <div class="section">
            <h2>Create New Product</h2>
            <form action="/admin/products/create" method="POST">
                <div class="form-grid">
                    <div class="form-group">
                        <label>Product Name:</label>
                        <input type="text" name="product_name" required>
                    </div>

                    <div class="form-group">
                        <label>Product Type:</label>
                        <select name="product_type" id="product_type" required onchange="toggleFields()">
                            <option value="">Select Type</option>
                            <option value="savings">Savings</option>
                            <option value="fixed_deposit">Fixed Deposit</option>
                            <option value="credit_card">Credit Card</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Interest Rate (%):</label>
                        <input type="number" name="interest_rate" step="0.01" required>
                    </div>

                    <div class="form-group" id="annual_fee_group">
                        <label>Annual Fee ($):</label>
                        <input type="number" name="annual_fee" step="0.01">
                    </div>

                    <div class="form-group" id="min_balance_group">
                        <label>Minimum Balance ($):</label>
                        <input type="number" name="min_balance" step="0.01">
                    </div>

                    <div class="form-group" id="tenure_group">
                        <label>Tenure (Months):</label>
                        <input type="number" name="tenure_months">
                    </div>

                    <div class="form-group" style="grid-column: 1 / -1;">
                        <label>Description:</label>
                        <textarea name="description" required></textarea>
                    </div>
                </div>

                <button type="submit" class="submit-btn">Create Product</button>
            </form>
        </div>

        <hr class="divider">

        <!-- Product Lists -->
        <% const grouped = { savings: [], fixed_deposit: [], credit_card: [] }; %>
        <% products.forEach(p => { grouped[p.product_type].push(p); }); %>

        <% Object.entries(grouped).forEach(([type, list]) => { %>
            <div class="section">
                <h2>
                    <span class="product-type-badge <%= type.replace('_', '-') %>">
                        <%= type.replace('_', ' ').toUpperCase() %>
                    </span>
                </h2>

                <% if (list.length === 0) { %>
                    <div class="empty-state">
                        <p>No <%= type.replace('_', ' ') %> products found.</p>
                    </div>
                <% } else { %>
                    <div class="table-container">
                        <table>
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Interest Rate</th>
                                    <% if (type === 'credit_card') { %>
                                        <th>Annual Fee</th>
                                    <% } %>
                                    <% if (type === 'savings' || type === 'fixed_deposit') { %>
                                        <th>Min Balance</th>
                                    <% } %>
                                    <% if (type === 'fixed_deposit') { %>
                                        <th>Tenure (Months)</th>
                                    <% } %>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% list.forEach(p => { %>
                                    <tr>
                                        <td><%= p.product_name %></td>
                                        <td><%= p.description || '-' %></td>
                                        <td><%= p.interest_rate != null ? p.interest_rate + '%' : '-' %></td>

                                        <% if (p.product_type === 'credit_card') { %>
                                            <td><%= p.annual_fee != null ? '$' + parseFloat(p.annual_fee).toFixed(2) : '-' %></td>
                                        <% } %>

                                        <% if (p.product_type === 'savings' || p.product_type === 'fixed_deposit') { %>
                                            <td><%= p.min_balance != null ? '$' + parseFloat(p.min_balance).toFixed(2) : '-' %></td>
                                        <% } %>

                                        <% if (p.product_type === 'fixed_deposit') { %>
                                            <td><%= p.tenure_months != null ? p.tenure_months : '-' %></td>
                                        <% } %>

                                        <td>
                                            <a href="/admin/products/edit/<%= p.product_id %>" class="action-btn edit">Edit</a>
                                            <form action="/admin/products/delete/<%= p.product_id %>" method="POST" class="action-form">
                                                <button type="submit" class="action-btn delete" onclick="return confirm('Delete this product?')">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        <% }) %>
    </div>

    <!-- Dynamic field toggle script -->
    <script>
        function toggleFields() {
            const type = document.getElementById('product_type').value;

            const annualFee = document.getElementById('annual_fee_group');
            const minBalance = document.getElementById('min_balance_group');
            const tenure = document.getElementById('tenure_group');

            annualFee.style.display = 'none';
            minBalance.style.display = 'none';
            tenure.style.display = 'none';

            if (type === 'savings') {
                minBalance.style.display = 'block';
            } else if (type === 'fixed_deposit') {
                minBalance.style.display = 'block';
                tenure.style.display = 'block';
            } else if (type === 'credit_card') {
                annualFee.style.display = 'block';
            }
        }

        window.onload = toggleFields;
    </script>
</body>
</html>